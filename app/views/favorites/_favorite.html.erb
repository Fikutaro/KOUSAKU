<% if user_signed_in? %>
  <% unless article.user.id == current_user.id %>
    <% if !Favorite.exists?(user_id: current_user.id, article_id: article.id) %>
      <p class='favorite-color'>
        <%= link_to article_favorites_path(article), method: :post, remote: true do %>
          <%= image_tag'okini2.png', :size => '100x75' %>
        <% end %>

      </p>
      <% else %>
      <p class='favorite-color'>
        <%= link_to article_favorites_path(article), method: :delete, remote: true  do %>
          <%= image_tag'okini3.png', :size => '100x75' %>
        <% end %>
      </p>
    <% end %>
  <% end %>
<% end %>