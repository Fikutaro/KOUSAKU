<div class='container'>
  <div class='row'>
    
    <% @articles.each do |article| %>
    <div class='col-6'>
     <div class="d-flex flex-column text-center">

     <div><%= image_tag 'person.jpg', :size =>'300x300' %></div>
     <div><h4><%= article.title %><h4></div>
     <div><%= article.preface %></div>
     <div><%= article.material %></div>
     <div><%= article.production_time %></div>
     <div><%= article.difficulty %></div>
     <div><%= article.user.nickname %></div>
     <div><%= sanitize article.body %></div>
     </div>
     </div>

    <% end %>

    </div>
  </div>
</div>