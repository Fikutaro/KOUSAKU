<div class='container'>
  <div class='row'>
    <h1 class="heading08"><span>New POST</span>投稿入力</h1>
  </div>
  <div class='row hoge'>
    <!-- form_with部分 -->
    <%= form_with model:@article, local:true do |f| %>

    <h4>メイン画像</h4>
    <%= attachment_image_tag @article, :article_image, :fill, 100, 100, format: 'jpeg',size:'300x300'%>
    <%= f.attachment_field :article_image, placeholder: "メイン画像" %>


      <h4>タイトル</h4>
      <%= f.text_field :title %>

      <h4>前書き</h4>
      <%= f.text_field :preface %>

      <h4>タグ</h4>
      <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids',\
        placeholder: "タグを複数つけるには','で区切ってください。" %>

      <h4>材料</h4>
      <%= f.text_field :material %>

      <h4>製作時間</h4>
      <%= f.text_field :production_time %>

      <h4>むずかしさ</h4>
      <%= f.select :difficulty, Article.difficulties.keys, {default: 0}, class:'btn btn-outline-dark' %>

      <h4>本文</h4>
      <div class="field">

      <%= f.text_area :body ,value:@article.body, 'data-provider': :summernote %>
       </div>

      <%= f.submit '投稿' %>

    <% end %>
  </div>
</div>