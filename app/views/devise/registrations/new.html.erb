<div class="signup-bg">
  <div class="text-center text-danger">
    <div class="bg-danger text-white">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-wrapper">
      <h1>会員登録</h1>
      <form>
        <div class="form-item">
          <%= f.label :氏名（他の会員には表示されません） %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "姓" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "名" %>
        </div><br>
        <div class="form-item">
          <%= f.label :氏名フリガナ（他の会員には表示されません）%>
          <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name",placeholder: "セイ" %>
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name",placeholder: "メイ" %>
        </div><br>
        <div class="form-item">
         <%= f.label :おなまえ（表示名） %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder: "表示させる名前" %>
        </div><br>
        <div class="form-item">
        <%= f.label :メールアドレス %>
  　　　<%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス" %>
        </div><br>
         <div class="form-item">
        <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード" %>
        </div><br>
        <div class="form-item">
           <%= f.label :パスワードの確認 %>
           <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワードをもう1度入力してください" %>
        </div>
     　  <div class="button-panel">
          <input type="submit" class="button" title="Sign In" value="Sign In"></input>
        </div>
   　  </form>
    </div>
  <% end %>
</div>
