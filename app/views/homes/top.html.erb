<div class="container">
  <div class="row hoge">
    <h1>みんなのお気に入りランキング</h1>
  </div>
  <div class="row">
    <% @all_ranks.each.with_index(1) do |article, i| %>
      <div class='col-3 mt-5'>
        <h1 class='text-warning'>
          第　<%= i %>　位
        </h1>
        <h2>
          お気に入り数：<%= article.favorites.count %>
        </h2>
      </div>
      <div class='col-4 mt-5'>
        <%= link_to article_path(article) do %>
          <div><%= attachment_image_tag article, :article_image, :fill, 300, 300, format: 'jpeg', fallback: "person.jpg", size:'300x300'%></div>
        <% end %>
      </div>
      <div class='col-5 mt-5'>
        <div class="d-flex flex-column">
          <%= link_to article_path(article) do %>
            <div><h2>タイトル:<%= article.title %><h2></div>
          <% end %>
          <div><h4>前書き:<%= article.preface %></h4></div>
          <div>材料：<%= article.material %></div>
          <div>かかる時間：<%= article.production_time %></div>
          <div>むずかしさ：<%= article.difficulty %></div>
          <div>
            投稿者：<%= article.user.nickname %>
            <%= attachment_image_tag article.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "person.jpg", size:'30x30'%>
          </div>
          <div>
            <% article.tags.each do |tag| %>
              タグ：<%= tag.tag_name %>
            <% end %>
          </div>
          <div class='star-btn' id="favorite_<%= article.id %>">
            <%= render "favorites/favorite", article: article %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>