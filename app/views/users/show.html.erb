 <div class="container">
   <div class="row ">
      <h1 class="heading08"><span>My page</span>マイページ</h1>
   </div>
    <div class="row">
     <div class="col-4">
        <h3>登録情報</h3>
        <%= link_to '編集する', edit_user_path(@user),  class: "btn btn-outline-success edit_customer_#{@user.id}" %>
        <table class="table">
          <tr>
            <th>氏名</th>
            <th><%= @user.last_name %><%= @user.first_name %></th>
          </tr>
          <tr>
            <th>フリカナ</th>
            <th><%= @user.kana_last_name %><%= @user.kana_first_name %></th>
          </tr>
          <tr>
            <th>表示名</th>
            <th><%= @user.nickname %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @user.email %></th>
          </tr>
          <tr>
            <th>会員画像</th>
            <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "person.jpg", size:'100x100'%></th>
          </tr>
        </table>
     </div>
   
     <div class='col-8'>
      <% @articles.each do |article| %>
    
      <div class="d-flex flex-column text-center">
         <%= link_to article_path(article) do %>
         <div><%= attachment_image_tag article, :article_image, :fill, 300, 300, format: 'jpeg', fallback: "person.jpg", size:'300x300'%></div>
         <div><h2><%= article.title %><h2></div>
         <% end %>
         <div><h4><%= article.preface %></h4></div>
         <div>材料：<%= article.material %></div>
         <div>かかる時間：<%= article.production_time %></div>
         <div>むずかしさ：<%= article.difficulty %></div>
         <div>
            <% if article.user == current_user %>
            <%= link_to '編集する', edit_article_path(article), class: "btn btn-sm btn-success edit_article_#{article.id}" %>
          <% end %>
         </div>
      </div>
    

    <% end %>
    </div>

 </div>
</div>

